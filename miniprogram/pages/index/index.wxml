<view class="result">
  <view class="result-num">{{num}}</view>
  <view class="result-op">{{op}}</view>
</view>
<view class="btns">
 <view>
  <view hover-class="bg" bindtap="resetBtn">C</view>
  <view hover-class="bg" bindtap="delBtn">DEL</view>
  <view hover-class="bg" bindtap="opBtn" data-id="%">%</view>
  <view hover-class="bg" bindtap="opBtn" data-id="/">/</view>
 </view>
 <view>
  <view hover-class="bg" bindtap="numBtn" data-id="7">7</view>
  <view hover-class="bg" bindtap="numBtn" data-id="8">8</view>
  <view hover-class="bg" bindtap="numBtn" data-id="9">9</view>
  <view hover-class="bg" bindtap="opBtn" data-id="*">x</view>
 </view>
 <view>
  <view hover-class="bg" bindtap="numBtn" data-id="4">4</view>
  <view hover-class="bg" bindtap="numBtn" data-id="5">5</view>
  <view hover-class="bg" bindtap="numBtn" data-id="6">6</view>
  <view hover-class="bg" bindtap="opBtn" data-id="-">-</view>
 </view>
 <view>
  <view hover-class="bg" bindtap="numBtn" data-id="1">1</view>
  <view hover-class="bg" bindtap="numBtn" data-id="2">2</view>
  <view hover-class="bg" bindtap="numBtn" data-id="3">3</view>
  <view hover-class="bg" bindtap="opBtn" data-id="+">+</view>
 </view>
 <view>
  <view hover-class="bg" bindtap="numBtn" data-id="0">0</view>
  <view hover-class="bg" bindtap="dotBtn" data-id=".">.</view>
  <view hover-class="bg" bindtap="opBtn" data-id="=">=</view>

 </view>

</view>